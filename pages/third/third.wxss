/* pages/third/second.wxss */
.container {
	overflow : hidden;
}
.zrblk {
	width  : 750rpx;
	height : 1500rpx;
}
.zrhead {
	width       : 385rpx;
	height      : 57rpx;
	display     : block;
	margin-left : 22rpx;
}
.zrbody {
	width   : 706rpx;
	/*height: 1200rpx;*/
	display : block;
	margin  : 0 auto;
	/*overflow: scroll;*/
}
.swiper-box {
	width  : 100%;
	height : 100%;
}
.zrnav {
	width    : 95rpx;
	display  : block;
	float    : left;
	position : relative;
}
.zrnav text {
	width       : 100%;
	height      : 100%;
	display     : block;
	font-size   : 32rpx;
	text-align  : center;
	font-weight : bold;
}
.navActive {
	background-image        : linear-gradient(to bottom, #03d5c4, #81e6cb);
	-webkit-background-clip : text; /*必需加前缀 -webkit- 才支持这个text值 */
	-webkit-text-fill-color : transparent;
}
.zractivebar {
	width      : 40rpx;
	height     : 2rpx;
	position   : absolute;
	left       : 22.5rpx;
	bottom     : 0;
	background : none;
	z-index    : 100;
	display    : none;
}
.navActive .zractivebar {
	display : block;
}
.sndps {
	width                      : 226rpx;
	height                     : 221rpx;
	float                      : left;
	margin-right               : 13rpx;
	box-shadow                 : 0 2rpx 5rpx 4rpx #e9e9e9;
	-webkit-box-shadow         : 0 2rpx 5rpx 4rpx #e9e9e9;
	margin-bottom              : 44rpx;
	border-bottom-left-radius  : 10rpx;
	border-bottom-right-radius : 10rpx;
	box-sizing                 : border-box;
	position                   : relative;
}
.sndps:nth-child(3n) {
	margin-right : 0;
}
.psimg {
	width  : 227rpx;
	height : 167rpx;
}
.pname {
	width       : 227rpx;
	height      : 54rpx;
	line-height : 54rpx;
	position    : absolute;
	left        : 0;
	bottom      : 0;
	text-align  : center;
	font-size   : 24rpx;
	font-weight : bold;
	color       : #333333;
}
.twblks {
	width         : 227rpx;
	height        : 227rpx;
	background    : #03d5c4;
	background    : linear-gradient(to bottom right, rgba(255, 249, 44, 0.4), rgba(3, 213, 196, 0.41));
	margin-right  : 12rpx;
	margin-bottom : 12rpx;
	float         : left;
}
.twblks:nth-child(3n) {
	margin-right : 0;
}